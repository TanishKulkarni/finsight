{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "requirements.txt", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "app.py" }
  ],
  "functions": {
    "app.py": {
      "runtime": "python3.9",
      "maxDuration": 10
    }
  },
  "env": {
    "FLASK_ENV": "production"
  }
}